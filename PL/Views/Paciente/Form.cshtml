@model ML.Paciente
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <h3 style="text-align:center"><strong>@ViewBag.Titulo</strong></h3>
        <h4>Llene la informacion en los campos correspondientes.</h4>
    </div>

    <br />
    <hr />
    <br />

    @using (Html.BeginForm("Form", "Paciente", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.IdPaciente, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.IdPaciente, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(model => model.IdPaciente)
                    </div>
                </div>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.AP, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.AP, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AP)
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.AM, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.AM, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AM)
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.FechaNacimiento, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FechaNacimiento)
                    </div>
                </div>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.FechaIngreso, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.FechaIngreso, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FechaIngreso)
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoSangre.IdTipoSangre, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.TipoSangre.IdTipoSangre, 
                       new SelectList(Model.TipoSangre.TiposSangre, "IdTipoSangre", "Nombre"), "Selecciona una opcion: ", 
                       new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Sexo, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Sexo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Sexo)
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Sintomas, new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Sintomas, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Sintomas)
                    </div>
                </div>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-2">
            </div>

            <div class="col-md-2">
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@ViewBag.Accion" class="btn btn-success" />
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Regresar", "GetAll", "Paciente", htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>

            <div class="col-md-2">
            </div>

            <div class="col-md-2">
            </div>
        </div>
    }
</div>